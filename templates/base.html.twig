{% extends '@AdminLTE/layout/default-layout-avanzu.html.twig' %}

{% block page_title %}{% endblock %}{% block page_subtitle %} {% endblock %}

{% block stylesheets %}
{{parent()}}
    {{ encore_entry_link_tags('app') }}
<style>
    a:link {
        text-decoration: none;
    }
</style>
{% endblock %}


{% block page_content_after %}

{% endblock %}


{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
    {{ encore_entry_script_tags('app') }}
    {% set alert = {'success': 'success', 'error': 'error', 'info': 'info', 'warning': 'warning'} %}
{% for flashType in alert %}
    {% for flashMessage in app.session.flashbag.get(flashType) %}

        <script>
            $(document).ready(function(){
                toastr.options = {
                    "closeButton": true,
                    "debug": false,
                    "newestOnTop": true,
                    "progressBar": false,
                    "positionClass": "toast-top-right",
                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "400",
                    "hideDuration": "800",
                    "timeOut": "5000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "slideDown",
                    "hideMethod": "slideUp"
                };

                toastr["{{ alert[flashType] }}"]("{{ flashMessage | raw }}");

            })
        </script>
    {% endfor %}
{% endfor %}
{% endblock %}